<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>

<head>
    <title>p5js Template</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.6.0/p5.js"></script>
    <script>
      
var scale = 0.0  //dilation     
var b = 0; //movement of mouse
function setup() {
  createCanvas(500, 500);
    scale = 0.3;
strokeWeight(7)
  stroke(255, 191, 128)//donut border
  background(250);//white
  fill(255, 204, 230)//pink
  ellipse(250,200,250,250)//large circle
 fill(255, 255, 255)//white
  ellipse(250,200,100,100)//small circle
noStroke();
  fill("grey")
  textSize(15)
  text("Move mouse, then press and drag mouse, then press a random key",50,30)//text and coordinates
    

}
function mouseMoved() {
strokeWeight(5) //size
stroke(random(150,255), random(130,255), random(160,255), random(120,255))//random colors
point(mouseX+random(-10,10),mouseY+random(-10,10))//sprint(point)
line(mouseX+random(-10,10),mouseY+random(-10,10),mouseX+random(-10,10),mouseY+random(-10,10));//sprinkle(line)
rect(mouseX+random(-10,10),mouseY+random(-10,10),.8,.8);//sprinkle square


}
function mouseDragged(){ //press mouse and move
background(random(160,255), random(150,255), random(160,255))//random color
strokeWeight(random(5,10))//random size 5-10
stroke(random(150,255), random(130,255), random(160,255), random(120,255))//random color
    strokeWeight(10);
    triangle(b,50,250,250)//colorful line
    
    stroke(random(150,255), random(130,255), random(160,255), random(120,255))
    triangle(b,100,250,250);//colorful line
    
    stroke(random(150,255), random(130,255), random(160,255), random(120,255))
    triangle(b,150,250,250)//colorful line

    stroke(random(150,255), random(130,255), random(160,255), random(120,255))
    triangle(b,200,250,250)//colorful line

    stroke(random(150,255), random(130,255), random(160,255), random(120,255))
    strokeWeight(7);
    triangle(b,250,250,250)//colorful line

    stroke(random(150,255), random(130,255), random(160,255), random(120,255))
    triangle(b,300,250,250)//colorful line
    
    stroke(random(150,255), random(130,255), random(160,255), random(120,255))
    triangle(b,350,250,250)//colorful line

    stroke(random(150,255), random(130,255), random(160,255), random(120,255))
    triangle(b,400,250,250)//colorful line
    
    b= mouseX+mouseY//coordinates of mouse
}
function keyPressed(){
background(random(160,255), random(150,255), random(160,255))//random color
strokeWeight(scale*7)//cookie border size
  stroke(204, 102, 0)//cookie border color
background(random(150,255), random(130,255), random(160,255), random(120,255)); //random color
    fill(255, 166, 77)//brown
    ellipse(scale*50,scale*50,scale*80,scale*80)//main part of cookie  
    noStroke()
    fill(128, 64, 0)//dark brown
    ellipse(scale*30,scale*60,scale*5,scale*5)//chocolate chip
    ellipse(scale*50,scale*50,scale*7,scale*7)//chocolate chip
    ellipse(scale*70,scale*70,scale*8,scale*8)//chocolate chip
    ellipse(scale*40,scale*30,scale*6,scale*6)//chocolate chip
    ellipse(scale*70,scale*40,scale*9,scale*9)//chocolate chip
    ellipse(scale*40,scale*70,scale*8,scale*8)//chocolate chip
    ellipse(scale*30,scale*50,scale*7,scale*7)//chocolate chip
    scale++ //scale bigger
    
    
}

    </script>
</head>

<body>
    <div id="code" class="container-fluid">
        <script src="https://gist-it.appspot.com/github/stepheniel7340/p5js/blob/master/04-interaction-project.html?footer=0"></script>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script>
        $(window).bind("load", function() {
            $('#code').before($('#defaultCanvas0').remove());
        });
    </script>
</body>


